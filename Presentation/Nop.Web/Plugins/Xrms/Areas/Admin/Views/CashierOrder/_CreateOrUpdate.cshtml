                    <script>
                        var orderVersion = @Model.Version;
                        var orderItemList = [];

                        function AddOrderItemModel(item, index) {
                            if (item.Id === 0) {
                                if (item.Quantity != 0) {
                                    orderItemList.push(new OrderItemModel(item.Id, item.ProductId, item.Quantity, item.AggregateId, item.Version));
                                }
                            }
                            else {
                                // quantity has changed
                                if (item.Quantity !== item.OldQuantity) {
                                    orderItemList.push(new OrderItemModel(item.Id, item.ProductId, item.Quantity, item.AggregateId, item.Version));
                                }
                            }
                        }
                        // create order
                        $('#save-cashier-order').click(function (e) {
                            e.preventDefault();
                            // get data from view

                            var viewData = $("#order-items-grid").data("kendoGrid").dataSource.data();
                            viewData.forEach(AddOrderItemModel);
                            var testData = {
                                TableId: $('#@Html.IdFor(model => model.TableId)').val(),
                                AddedOrderItems: orderItemList
                            };
                            var postData = {};
                            postData.TableId = $('#@Html.IdFor(model => model.TableId)').val();
                            postData.AddedOrderItems = orderItemList;
                            //addAntiForgeryToken(postData);

                            $.ajax({
                                cache: false,
                                type: "POST",
                                //dataType: "json",
                                //contentType: "application/json; charset=utf-8",
                                url: "@(Url.Action("Create", "CashierOrder"))",
                                data: {
                                    model: JSON.stringify(postData)
                                },
                                error: function(xhr, ajaxOptions, thrownError) {
                                    alert(thrownError);
                                },
                                success: function (result) {
                                    // similar behavior as an HTTP redirect
                                    var orderGuid = result;
                                    window.location.href = '@Url.Action("Edit", "CashierOrder", new { id = "GUID"})'.replace("GUID", orderGuid);
                                },
                                traditional: true
                            });
                            return false;
                        });

                        $('#updates-order-items').click(function (e) {
                            e.preventDefault();
                            // get data from view

                            var viewData = $("#order-items-grid").data("kendoGrid").dataSource.data();
                            viewData.forEach(AddOrderItemModel);
                            var postData = {};
                            postData.AggregateId = '@Model.AggregateId';
                            postData.Version = orderVersion;
                            postData.UpdatedOrderItems = orderItemList;
                            //addAntiForgeryToken(postData);
                            connection.invoke('getConnectionId')
                                .then(function (connectionId) {
                                    // Send the model and hubConnectionId to controller
                                    $.ajax({
                                        cache: false,
                                        type: "POST",
                                        //dataType: "json",
                                        //contentType: "application/json; charset=utf-8",
                                        url: "@(Url.Action("UpdateOrderItems", "CashierOrder"))",
                                        data: {
                                            hubConnectionId: connectionId,
                                            model: JSON.stringify(postData)
                                        },
                                        error: function(xhr, ajaxOptions, thrownError) {
                                            alert(thrownError);
                                        },
                                        success: function (result) {
                                            //window.location.href = '@Url.Action("List", "CashierOrder")';
                                            // reload order item list
                                            //var grid = $('#order-items-grid').data('kendoGrid');
                                            //grid.dataSource.page(1);
                                            //orderItemList = [];
                                            window.location.reload();
                                        },
                                        traditional: true
                                    });
                                })
                                .catch(err => console.error(err.toString()));
                            
                            return false;
                        });
                    </script>
                </div>
            </div>
        </div>

